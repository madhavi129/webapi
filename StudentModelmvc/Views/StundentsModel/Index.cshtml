@model IEnumerable<StudentModelmvc.Models.StudentModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentRollNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentCountry)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentRollNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentCountry)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentRollNo }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentRollNo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentRollNo })
        </td>
    </tr>
}

</table>
